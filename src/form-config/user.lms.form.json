{
  "FormConfig": {
    "HeaderButtons": {
      "Create": [
        { "Key": "Submit", "ButtonAction": "Submit" }
      ],
      "Edit": [
        { "Key": "Cancel" },
        { "Key": "Submit", "ButtonAction": "Submit" }
      ],
      "View": [
        { "Key": "Edit" }
      ]
    },
    "Fields": [
      {
        "Key": "Account",
        "DisplayName": "Account Information",
        "Type": "tab",
        "Fields": [
          {
            "Key": "AccountCredentials",
            "DisplayName": "Account Credentials",
            "Type": "section",
            "Fields": [
              {
                "Key": "username",
                "Type": "Text",
                "IsRequired": true
              },
              {
                "Key": "email",
                "Type": "Text",
                "IsRequired": true
              },
              {
                "Key": "password",
                "Type": "Password",
                "IsRequired": true
              }
            ]
          },
          {
            "Key": "AccountStatus",
            "DisplayName": "Account Status",
            "Type": "section",
            "Fields": [
              {
                "Key": "status",
                "Type": "Radio",
                "IsRequired": true,
                "Options": [
                  { "label": "Active", "value": "ACTIVE" },
                  { "label": "Inactive", "value": "INACTIVE" }
                ]
              }
            ]
          }
        ]
      },
      {
        "Key": "Profile",
        "DisplayName": "Profile Details",
        "Type": "tab",
        "Fields": [
          {
            "Key": "BasicInfo",
            "DisplayName": "Basic Information",
            "Type": "section",
            "Fields": [
              {
                "Key": "firstName",
                "Type": "Text",
                "IsRequired": true
              },
              {
                "Key": "lastName",
                "Type": "Text",
                "IsRequired": true
              }
            ]
          },
          {
            "Key": "ContactInfo",
            "DisplayName": "Contact Information",
            "Type": "section",
            "Fields": [
              {
                "Key": "phone",
                "Type": "Number"
              }
            ]
          },
          {
            "Key": "AddressInfo",
            "DisplayName": "Address Information",
            "Type": "section",
            "Fields": [
              {
                "Key": "addressLine1",
                "Type": "Text",
                "IsRequired": true
              },
              {
                "Key": "addressLine2",
                "Type": "Text"
              },
              {
                "Key": "city",
                "Type": "Text",
                "IsRequired": true
              },
              {
                "Key": "state",
                "Type": "Text",
                "IsRequired": true
              },
              {
                "Key": "country",
                "Type": "Dropdown",
                "IsRequired": true,
                "Options": [
                  { "label": "India", "value": "IN" },
                  { "label": "USA", "value": "US" },
                  { "label": "UK", "value": "UK" }
                ]
              },
              {
                "Key": "pincode",
                "Type": "Number",
                "IsRequired": true
              }
            ]
          }
        ]
      },
      {
        "Key": "Access",
        "DisplayName": "Roles & Groups",
        "Type": "tab",
        "Fields": [
          {
            "Key": "RoleAssignment",
            "DisplayName": "Role Assignment",
            "Type": "section",
            "Fields": [
              {
                "Key": "role",
                "Type": "Dropdown",
                "IsRequired": true,
                "Options": [
                  { "label": "Admin", "value": "ADMIN" },
                  { "label": "Teacher", "value": "TEACHER" },
                  { "label": "Student", "value": "STUDENT" }
                ]
              }
            ]
          },
          {
            "Key": "GroupAssignment",
            "DisplayName": "Group Assignment",
            "Type": "section",
            "Fields": [
              {
                "Key": "groups",
                "Type": "MultiSelect",
                "Options": [
                  { "label": "Batch A", "value": "A" },
                  { "label": "Batch B", "value": "B" }
                ]
              }
            ]
          }
        ]
      },
      {
        "Key": "Courses",
        "DisplayName": "Course Assignment",
        "Type": "tab",
        "Fields": [
          {
            "Key": "CourseAssignment",
            "DisplayName": "Assigned Courses",
            "Type": "section",
            "Fields": [
              {
                "Key": "courses",
                "Type": "MultiSelect",
                "Options": [
                  { "label": "React Basics", "value": "REACT" },
                  { "label": "Node.js", "value": "NODE" },
                  { "label": "Python", "value": "PYTHON" }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
